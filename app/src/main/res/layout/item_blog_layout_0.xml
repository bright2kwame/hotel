<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hero_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="shared_image" />

    <LinearLayout
        android:id="@+id/main_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date_of_publication"
            fontPath="fonts/open_sans.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:gravity="left"
            android:text="24 September, 2016"
            android:textAllCaps="false"
            android:textColor="@color/medium_green_800"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_post_title"
            fontPath="fonts/open_sans_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/font_family_medium"
            android:gravity="left"
            android:text="8 Destinations in India to celebrate New Year's"
            android:textAllCaps="false"
            android:textColor="@color/app_dark_200"
            android:textSize="20sp"
            android:textStyle="normal"
            android:transitionName="shared_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical">

        <TextView
            fontPath="fonts/open_sans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:gravity="left"
            android:text="View Full Story"
            android:textAllCaps="false"
            android:textColor="@color/farmr_teal_500"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:tint="@color/farmr_teal_500"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>
</LinearLayout>
